@model IEnumerable<Reviews>

@{
    ViewData["Title"] = "ClothesReviews";
}

<h2>Reviews for the Clothes: @ViewBag.ClothesName</h2>

<h4>
    <a asp-controller="Clothes" asp-action="DisplayDetails"
       asp-route-id="@ViewBag.ClothesId">Back to  @ViewBag.ClothesName</a>
</h4>

<p>
    <a asp-action="CreateWithClothes" asp-route-ClothesId="@ViewBag.ClothesId" class="btn btn-success">Create New Review</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Grade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Clothes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Grade)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Clothes.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.User.Email)
                </td>
                <td>

            </tr>
        }
    </tbody>
</table>
