@model IEnumerable<Sud.Models.Reviews>

@{
    ViewData["Title"] = "EmployeeIndex";
}
<div class="jumbotron">
    <h1>All Reviews</h1>

    <p>
        <a asp-action="Create" class="btn btn-light text-primary">Create New</a>
    </p>
    <table class="table text-white">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Grade)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Date)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Clothes)
                </th>
                @if (ViewContext.HttpContext.User.IsInRole("Employee"))
                {
                    <th>
                        @Html.DisplayNameFor(model => model.User)
                    </th>
                }
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Grade)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Date)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Clothes.Name)
                    </td>
                    @if (ViewContext.HttpContext.User.IsInRole("Employee"))
                    {
                        <td>
                            @Html.DisplayFor(modelItem => item.User.Id)
                        </td>
                    }
                    <td>
                        @Html.DisplayFor(modelItem => item.User.Email)
                    </td>
                    <td>
                        @*<a class="btn btn-light text-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a>*@
                        <a asp-action="Details" class="btn btn-light text-primary" asp-route-id="@item.Id">Details</a>
                        @*<a class="btn btn-light text-primary" asp-action="Delete" asp-route-id="@item.Id">Delete</a>*@
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>