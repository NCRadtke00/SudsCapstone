@model Sud.Models.ViewModels.SearchClothesViewModel

@{
    var ModelName = "Search Clothes";
    ViewData["Title"] = ModelName;
}
<div class="jumbotron">
    <h2>@ModelName</h2>
    <form asp-controller="Clothes" asp-action="SearchClothes">
        <div class="form-horizontal">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SearchText" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="SearchText" class="form-control" />
                    <span asp-validation-for="SearchText" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Search" class="btn btn-primary" />
                </div>
            </div>
        </div>
    </form>

    <h4>Results</h4>
    <hr />
</div>
<div class="row">
    @foreach (var clothes in Model.ClothesList)
    {
        <div class="column">
            @Html.Partial("ClothesSummary", clothes)
        </div>
    }
</div>
