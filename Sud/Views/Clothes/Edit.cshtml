@model Sud.Models.Clothes

@{
    ViewData["Title"] = "Edit";
}
<div class="jumbotron">
    <h1>Edit this item</h1>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-white"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="Name" class="control-label text-white"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-white"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Price" class="control-label text-white"></label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-white"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ImageUrl" class="control-label text-white"></label>
                    <input asp-for="ImageUrl" class="form-control" />
                    <span asp-validation-for="ImageUrl" class="text-white"></span>
                </div>
                <div class="form-group form-check">
                    <label class="form-check-label text-white">
                        <input class="form-check-input" asp-for="IsPopularItem" /> @Html.DisplayNameFor(model => model.IsPopularItem)
                    </label>
                </div>
                <div class="form-group">
                    <label asp-for="ServicesId" class="control-label text-white"></label>
                    <select asp-for="ServicesId" class="form-control" asp-items="ViewBag.ServicesId"></select>
                    <span asp-validation-for="ServicesId" class="text-white"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-light text-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a class="btn btn-light text-primary" asp-action="Index">Back to List</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
