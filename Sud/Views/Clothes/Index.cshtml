@model IEnumerable<Clothes>

@{
    var pageName = "Clothes";
    ViewData["Title"] = pageName;
}
<div class="jumbotron">
    <div style="text-align:center">
        <h1>@pageName</h1>
    </div>
    

    <p>
        <a asp-action="Create" class="btn btn-light text-primary">Create New</a>
    </p>
    <table class="table text-white">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Price)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ImageUrl)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsPopularItem)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Services)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ImageUrl)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsPopularItem)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Services.Name)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-light text-primary">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-light text-primary">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-light text-primary">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    </div>