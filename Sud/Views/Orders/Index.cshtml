@model IEnumerable<Sud.Models.Order>

@{
    var pageName = "Orders";
    ViewData["Title"] = pageName;
}
<div class="jumbotron text-white">
    <h1>Your past orders</h1>

    @if (Model.Count() <= 0)
    {
        <h3>You haven't created any @pageName yet...</h3>
    }


    <table class="table text-white">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.FirstName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LastName)
                </th>
                @*<th>
                    @Html.DisplayNameFor(model => model.Address)
                </th>*@
                <th>
                    @Html.DisplayNameFor(model => model.PhoneNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.OrderTotal)
                </th>
                @*<th>
                    @Html.DisplayNameFor(model => model.PaymentAmount)
                </th>*@
                <th>
                    @Html.DisplayNameFor(model => model.OrderPlaced)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.User)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    @*<td>
                        @Html.DisplayFor(modelItem => item.Address.StreetAddress)
                    </td>*@
                    <td>
                        @Html.DisplayFor(modelItem => item.PhoneNumber)
                    </td>
                    <td>
                        @item.OrderTotal.ToString("c")
                    </td>
                    @*<td>
                        @item.PaymentAmount.ToString("c")
                    </td>*@
                    <td>
                        @Html.DisplayFor(modelItem => item.OrderPlaced)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.User.Email)
                    </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.OrderId" class="btn btn-light">Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>