@model IEnumerable<Services>

<li class="dropdown">
    <a asp-controller="Clothes" asp-action="ListAll"
       class="dropdown-toggle" data-toggle="dropdown">Services<b class="caret"></b></a>
    <ul class="dropdown-menu">
        @foreach (var services in Model)
        {
            <li>
                <a asp-controller="Clothes" asp-action="ListServices"
                   asp-route-servicesName="@services.Name">@services.Name</a>
            </li>
        }
        <li class="divider"></li>
        <li>
            <a asp-controller="Clothes" asp-action="ListAll" asp-route-services="">View all</a>
        </li>
    </ul>
</li>
