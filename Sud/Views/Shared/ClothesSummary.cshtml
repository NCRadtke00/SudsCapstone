@model Clothes



<div class="card-deck">
    <div class="card">
        <div class="card-header">
            <h3>
                <a asp-controller="Clothes" asp-action="DisplayDetails" asp-route-id="@Model.Id">
                    @Model.Name
                </a><b> @Model.Services.Name</b>
            </h3>
        </div>
        <div class="card-body text-center">
            <img src="@Model.ImageUrl" class="card-img-top imageThumbnail">
            @*<h3>@Model.Price.ToString("c")</h3>*@
        </div>
        <div class="card-footer">

            <div class="addToCart">
                <p class="button">
                    <a class="btn btn-light" asp-controller="ShoppingCart" asp-action="AddToShoppingCart"
                       asp-route-clothesId="@Model.Id">Add to cart @Model.Price.ToString("c")</a>
                </p>
            </div>
        </div>
    </div>
</div>
