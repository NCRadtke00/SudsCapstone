@model Clothes
@*<div class="col-sm-4 col-lg-4 col-md-4">*@

<div class="container-fluid">
    <div class="row">
        <div class="col-3">
            <div class="card-deck">
                <div class="card mt-2" style="min-width: 18rem; max-width: 30.5%;">
                    <div class="card-header">
                        <h3>
                            <a asp-controller="Clothes" asp-action="DisplayDetails" asp-route-id="@Model.Id">@Model.Name</a>
                        </h3>
                    </div>
                    <div class="card-body text-center">
                        <img src="@Model.ImageUrl" class="card-img-top imageThumbnail">
                        <h3>@Model.Price.ToString("c")</h3>
                        <h5><b> @Model.Services.Name</b></h5>
                    </div>
                    <div class="card-footer">

                        <div class="addToCart">
                            <p class="button">
                                <a class="btn btn-primary" asp-controller="ShoppingCart" asp-action="AddToShoppingCart"
                                   asp-route-clothesId="@Model.Id">Add to cart @Model.Price.ToString("c")</a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
